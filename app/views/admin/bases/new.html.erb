<h1>拠点情報追加</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @base] do |f| %>
    
    <%= f.label :base_number %>
    <%= f.text_field :base_number %>
    
    <%= f.label :base_name %>
    <%= f.text_field :base_name %>
    
    <%= f.label :attendance_type %>
    <%= f.select :attendance_type, {"なし": "なし", 
                                    "出勤": "出勤", 
                                    "退勤": "退勤"}, include_blank: true %>
    <%= f.submit "追加", class: "btn btn-default btn-primary" %>                             
    <% end %>                                
  </div>
</div>