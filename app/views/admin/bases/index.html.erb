<div>
  <h1>拠点一覧</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td></td>
        <td></td>
        <td>拠点番号</td>
        <td>拠点名</td>
        <td>勤怠種類</td>
      </tr>
    </thead>
    <tbody>
      <% @bases.each do |base| %>
        <tr>
          <td><%= link_to "修正", edit_admin_basis_path(base), class: "btn btn-default btn-primary" %></td>
          <td><%= link_to "削除", admin_basis_path(base), method: :delete, 
                                  data: { confirm: "本当によろしいですか?" }, 
                                  class: "btn btn-default btn-primary" %></td>
          <td><%= base.base_number %></td>
          <td><%= base.base_name %></td>
          <td><%= base.attendance_type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "追加", new_admin_basis_path, class: "btn btn-default btn-primary" %>
</div>