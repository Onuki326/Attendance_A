<div class="modal-dialog">
  <%= form_for(@overtime, url: user_overtime_path(@user)) do |f| %>
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <div class="modal-body">
        <% @users.each do |user| %>
          <div class="modal-title">
            <h2>【<%= user.name %>】からの残業申請</h2>
          </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <td>日付</td>
                <td>曜日</td>
                <td>終了予定時間</td>
                <td>指定勤務終了時間</td>
                <td>時間外時間</td>
                <td>業務処理内容</td>
                <td>指示者確認印</td>
                <td>変更</td>
                <td>勤怠を確認する</td>
              </tr>
            </thead>
            <tbody>
              <% user_overtime_apploy_to_srerior(user).each do |overtime| %>
                <tr>
                  <td><%= overtime_day(overtime) %></td>
                  <td><%= overtime_week(overtime, @wd) %></td>
                  <td><%= overtime_finish_hour(overtime)%>:<%= overtime_finish_min(overtime) %></td>
                  <td><%= overtime_finishing_hour(user) %></td>
                  <td><%= overtime_work(user, overtime) %></td>
                  <td><%= overtime.remark %></td>
                  <td><%= f.select :sperior_id, Attendance.states.map{|k, v| [k, k] } %></td>
                  <td><%= f.check_box :change_state, {multiple: true}, true, false %></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <input type="submit" value="変更を送信する">
      </div>
    </div>
  <% end %>
</div>