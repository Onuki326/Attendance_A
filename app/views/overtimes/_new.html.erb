<div class="modal-dialog">
  <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= form_for(@overtime, url: user_overtime_path(@user), html: {method: "post"}, class: "form-control") do |f| %>
      <div class="modal-body">
        <h2 class="modal-title">【残業申請】</h2>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <td>日付</td>
              <td>曜日</td>
              <td>終了予定時間</td>
              <td>翌日</td>
              <td>業務処理内容</td>
              <td>指示者確認印</td>
            </tr>
          </thead>
          <tbody>
            <%= f.hidden_field :state, value: "申請中" %>
            <%= f.hidden_field :day, value: @overtime.day %>
            <%= f.hidden_field :type, value: "Overtime" %>
            <tr>
              <td><%= @overtime.day %></td>
              <td><%= @wd[@overtime.day.wday]%></td>
              <td><%= f.time_field :finish_at %></td>
              <td><%= f.check_box :yesterday_state, {}, true, false%></td>
              <td><%= f.text_field :remark %></td>
              <td><%= f.select :sperior_id, @sperior_users.map{|u| [u.name, u.id]}, include_blank: true %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit class: "btn btn_default btn_modal" %>
      </div>
    <% end %>  
  </div>
</div>  