<div class="modal-dialog">
  <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>  
    <div class="modal-body">
      <h2 class="modal-title">【残業申請】</h2>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <td>日付</td>
            <td>曜日</td>
            <td>終了予定時間</td>
            <td>翌日</td>
            <td>業務処理内容</td>
            <td>指示者確認印</td>
          </tr>
        </thead>
        <tbody>
            <tr>
              <%= form_for(@user) do |f| %>
                <% f.fields_for :overtimes do |t| %>
                  <td><%= @overtime.day %></td>
                  <td><%= @wd[@overtime.day.wday]%></td>
                  <td><%= t.time_field :leave %></td>
                  <td><%= t.check_box :yesterday_state %></td>
                  <td><%= t.text_field :remark %></td>
                  <td><%= t.select :sperior_id, @sperior_users.map{|u| [u.name, u.id]}, include_blank: true %></td>
                <% end %>
              <% end %>  
            </tr>
        </tbody>
      </table>
      <button_to></button_to>
    </div>
  </div>
</div>  